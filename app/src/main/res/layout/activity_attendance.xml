<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttendanceActivity">


    <LinearLayout
        android:id="@+id/wifiMessageLayout"
        android:layout_above="@+id/setActivityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/device"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/helpMessage"
            android:fontFamily="@font/product_sans"
            android:text="HELP_MESSAGE"
            android:textSize="20sp"
            android:textColor="#E0477B"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <TextView
        android:id="@+id/setActivityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/product_sans"
        android:textSize="16sp"
        android:textAlignment="center"
        android:padding="10dp"
        android:textColor="@color/textSecondaryColor"
        android:text="USER_FULLNAME"
        android:visibility="gone"
       />


    <Button
        android:id="@+id/goToAttendance"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border"
        android:textColor="#000000"
        android:layout_margin="20dp"
        android:visibility="gone"
       />

</RelativeLayout>